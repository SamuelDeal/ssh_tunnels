[Unit]
Description="Ssh tunnel daemon (%i)"
After=network-online.target
After=network.target
After=syslog.target

[Service]
Type=simple
User=ssh-tunnel
Group=nogroup
ExecStart=/usr/local/ssh_tunnels/bin/ssh_tunnel.pl -c /usr/local/ssh_tunnels/etc/ssh_tunnel.conf "%i"

[Install]
WantedBy=multi-user.target
